{
    "name": "firehed/security",
    "description": "Security tools for PHP",
    "keywords": [
        "security",
        "secret",
        "string",
        "hidden",
        "masked",
        "sensitive",
        "password"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
        "phpstan/phpstan": "^0.12.98",
        "phpstan/phpstan-strict-rules": "^0.12.11",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "paragonie/constant_time_encoding":
            "Contains a secure base32-encoder, useful for generating QRCodes for TOTP registration"
    },
    "autoload": {
        "psr-4": {
            "Firehed\\Security\\": "src/"
        },
        "files": [
            "src/HOTP.php",
            "src/TOTP.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Firehed\\Security\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "autofix": "phpcbf",
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse",
        "phpstan-baseline": "phpstan analyse --generate-baseline",
        "phpcs": "phpcs"
    }
}
